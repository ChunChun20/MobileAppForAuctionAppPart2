<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Description TextView -->
        <TextView
            android:id="@+id/recentlySoldDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:textStyle="bold"
            android:padding="8dp"
            android:minLines="3"
            android:visibility="visible" /> <!-- Initially visible -->

        <!-- ImageView -->
        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginTop="8dp"
            android:visibility="gone" /> <!-- Initially hidden -->

        <!-- FrameLayout to hold both views -->
        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <!-- Add your buttons here -->
            <!-- Buttons -->
            <Button
                android:id="@+id/btnSwitchView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="->"
                android:textSize="18sp"
                android:backgroundTint="@color/lavender"
                android:layout_gravity="center|center_vertical"
                app:cornerRadius="20dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp" />

        </FrameLayout>

        <!-- Buttons -->
        <Button
            android:id="@+id/btnBid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bid"
            android:textSize="18sp"
            android:backgroundTint="@color/mint_green"
            app:cornerRadius="20dp"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnCustomBid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Custom Bid"
            android:textSize="18sp"
            android:backgroundTint="@color/teal_200"
            app:cornerRadius="20dp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnMailOwner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mail Seller"
            android:textSize="18sp"
            android:backgroundTint="@color/mail_seller"
            app:cornerRadius="20dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>